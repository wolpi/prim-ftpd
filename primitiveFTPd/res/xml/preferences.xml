<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/prefCategoryTitle">
		<EditTextPreference
			android:name="user_name"
			android:key="userNamePref"
			android:defaultValue="user"
			android:title="@string/prefTitleUser"
			android:summary="@string/prefSummaryUser"
		/>
		<org.primftpd.EncryptingEditTextPreference
			android:name="password"
			android:key="passwordPref"
			android:title="@string/prefTitlePassword"
			android:summary="@string/prefSummaryPassword"
			android:password="true"
		/>
		<EditTextPreference
			android:name="port"
			android:key="portPref"
			android:defaultValue="12345"
			android:title="@string/prefTitlePort"
			android:summary="@string/prefSummaryPort"
			android:numeric="integer"
		/>
		<!-- XXX SSL
		<EditTextPreference
			android:name="sslPort"
			android:key="sslPortPref"
			android:defaultValue="1234"
			android:title="@string/prefTitlePortSsl"
			android:summary="@string/prefSummaryPortSsl"
			android:numeric="integer"
		/>
		-->
		<CheckBoxPreference 
			android:name="announce"
			android:key="announcePref"
			android:defaultValue="true"
			android:title="@string/prefTitleAnnounce"
			android:summary="@string/prefSummaryAnnounce"
		/>
		<CheckBoxPreference 
			android:name="bootstart"
			android:key="bootstartPref"
			android:defaultValue="false"
			android:title="@string/prefTitleBootStart"
			android:summary="@string/prefSummaryBootStart"
		/>	
		<CheckBoxPreference 
			android:name="wifimode"
			android:key="wifimodePref"
			android:defaultValue="false"
			android:title="@string/prefTitleWifiMode"
			android:summary="@string/prefSummaryWifiMode"
		/>
		<EditTextPreference
			android:name="allowed_interfaces"
			android:key="allowedInterfacesPref"
			android:defaultValue=""
			android:title="@string/prefAllowedInterfaces"
			android:summary="@string/prefSummaryAllowedInterfaces"
		/>
		</PreferenceCategory>
</PreferenceScreen>
